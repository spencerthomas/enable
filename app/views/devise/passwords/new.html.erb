
<div class="img-fluid signup_image">
  <div class="row user_page justify-content-center">
    <div class="col-sm-6 text-center align-content-center">
      <div class="card user_card align-content-center">

				<h2>Forgot your password?</h2>

				<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
				  <%= devise_error_messages! %>

				  <div class="field">
				    <%= f.email_field :email, autofocus: true, label: false, placeholder: "Email", class: "form-control" %>
				  </div>

				  <div class="actions">
				    <%= f.submit "Let's Go", class: "btn btn-primary" %>
				  </div>
				<% end %>

				<%= render "devise/shared/links" %>

			</div>
		</div>	
	</div>
</div>