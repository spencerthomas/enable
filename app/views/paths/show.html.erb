<div class="container-fluid">
  <div class="row path_row">
  
    <div class="col-md-6 float-left">
        <div class="card  ">
          <div class="card-block">
            <p class="card-subtitle" style="color: 999999; padding-bottom: 10px;">Path</p>
            <h4 class="card-title pull-left"><%= @path.title %></h4>
            <p class="pull-right"><%= @path.length %></p>
         </div>
        <div class="card-block">
            <div class="progress path_progress">
          <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">
          </div>
          </div>
        </div>
        <div class="card-block">
             <p class="card-text"><%= @path.long_description %></p>

            <%= link_to "START", paths_path(@path[:id]), class: "card-link btn btn-card-start" %>
            <%= link_to "LEAVE",  paths_path, class: "card-link btn btn-outline-info" %>
        </div>
      </div>
    </div>

    <div class="col-md-6 float-right">
        <%= render "paths/course" %>
    </div>
    
  </div>
</div>